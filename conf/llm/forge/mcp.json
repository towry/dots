{
  "mcpServers": {
    "context7": {
      "command": "bunx",
      "args": ["@upstash/context7-mcp"]
    },
    "playwright": {
      "command": "bunx",
      "args": ["@playwright/mcp@latest"]
    },
    "commander-mcp": {
      "command": "commander-mcp"
    },
    "memory": {
      "command": "bunx",
      "args": ["@modelcontextprotocol/server-memory"],
      "alwaysAllow": [
        "read_graph",
        "create_entities",
        "create_relations",
        "add_observations"
      ]
    }
  }
}
