  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": 1,
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": 1
  },
  "includeCoAuthoredBy": true,
  "cleanupPeriodDays": 5,
  "enableAllProjectMcpServers": true,
  "disableAllHooks": false,
  "alwaysThinkingEnabled": true,
  "hooks": {
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/pre_compact.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.dotfiles/nix/hm/ai/claude/hooks/session_remind.py"
          }
        ]
      },
      {
        "matcher": "clear",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.dotfiles/nix/hm/ai/claude/hooks/session_summary.py"
          },
          {
            "type": "command",
            "command": "uv run ~/.dotfiles/nix/hm/ai/claude/hooks/session_start_handoff.py"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.dotfiles/nix/hm/ai/claude/hooks/handoff_interceptor.py"
          },
          {
            "type": "command",
            "command": "uv run ~/.dotfiles/nix/hm/ai/claude/hooks/sync_interceptor.py"
          },
          {
            "type": "command",
            "command": "uv run ~/.dotfiles/nix/hm/ai/claude/hooks/pickup_hook.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.dotfiles/nix/hm/ai/claude/hooks/prevent_forbidden_bash.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "SlashCommand",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.dotfiles/nix/hm/ai/claude/hooks/post_pickup_handler.py"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -sound default -message 'Claude Code: Awaiting your input'"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.dotfiles/nix/hm/ai/claude/hooks/session_save.py"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "uv run ~/.dotfiles/scripts/claude-statusline.py",
    "padding": 0
  }
}
