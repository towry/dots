{
  "mcpServers": {
    "playwright": {
      "type": "stdio",
      "command": "bunx",
      "args": [
        "@playwright/mcp@latest",
        "--executable-path",
        "google-chrome-stable",
        "--extension"
      ],
      "disabled": false,
      "env": {
        "PLAYWRIGHT_MCP_EXTENSION_TOKEN": "${PLAYWRIGHT_MCP_EXTENSION_TOKEN}"
      }
    },
    "github": {
      "type": "stdio",
      "command": "github-mcp-server",
      "args": [
        "stdio",
        "--dynamic-toolsets"
      ],
      "disabled": true,
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "mermaid": {
      "type": "stdio",
      "command": "bunx",
      "args": [
        "@devstefancho/mermaid-mcp"
      ],
      "disabled": false
    },
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "disabled": false
    },
    "grep-code": {
      "type": "http",
      "url": "https://mcp.grep.app",
      "disabled": false
    },
    "brightdata": {
      "type": "stdio",
      "command": "bunx",
      "args": [
        "@brightdata/mcp"
      ],
      "disabled": false,
      "env": {
        "API_TOKEN": "${BRIGHTDATA_API_KEY}"
      }
    },
    "codex": {
      "type": "stdio",
      "command": "codex-ai",
      "args": [
        "--profile",
        "claude_fast",
        "mcp-server"
      ],
      "disabled": false
    }
  }
}
